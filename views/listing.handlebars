<div class="w-screen flex flex-row flex-wrap">
  {{#each listings as |listing|}}
    <div class="w-1/4 h-96 border-2 border-black rounded m-8"><div
        class="h-1/5 bg-red-500 text-center align-middle"
      >{{listing.name}}</div><div
        class="h-1/5 bg-black bg-opacity-90 text-white text-center"
      >{{listing.category}}</div><div
        class="h-2/5 bg-black bg-opacity-90 text-white text-center"
      >{{listing.description}}</div><div
        class="h-1/5 bg-red-500 flex flex-row place-content-center"
      ><button class="w-1/3 border-2 border-black rounded">SAVE</button><button
          class="w-1/3 border-2 border-black rounded"
        >HIDE</button><button
          class="w-1/3 border-2 border-black rounded"
        >RESPOND</button></div></div>
  {{/each}}
</div>
