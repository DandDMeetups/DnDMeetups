<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Listing:</h3>

    <form class="form new-listing-form">
      <div class="form-group">
        <label for="listing-name">Listing Name:</label>
        <input class="form-input" type="text" id="listing-name" name="listing-name" />
      </div>
      <div class="form-group">
        <label for="listing-title">Listing Title:</label>
        <input class="form-input" type="number" id="listing-title" name="listing-title" />
      </div>
      <div class="form-group">
        <label for="listing-desc">Description:</label>
        <textarea class="form-input" id="listing-desc" name="listing-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if listings.length}}
  <div class="col-md-6 listing-list">
    <h3>Current Listings:</h3>

    {{#each listings as |listing|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/listing/{{listing.id}}">{{listing.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{listing.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
